<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="39dp"
    android:background="@drawable/bg_bottom_software"
	android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txt_softwarenumber_software"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.95"
        android:text="@string/txt_app_type_num_software"
        android:textColor="@color/white"
        android:textSize="@dimen/frontsize_normal" />

    <ToggleButton
        android:id="@+id/tgl_switch_software"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tgl_switch_software_selector"
        android:textOn=""
        android:textOff=""
        />

</LinearLayout>
